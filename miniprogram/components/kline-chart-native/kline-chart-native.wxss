/* components/kline-chart-native/kline-chart-native.wxss */
.kline-chart-container {
  width: 100%;
  height: 100%;
  position: relative;
  background-color: #ffffff;
  border-radius: 16rpx;
}

.kline-canvas {
  width: 100%;
  height: 100%;
  display: block;
}

/* 空数据状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 60rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.empty-hint {
  font-size: 24rpx;
  color: #999;
}
