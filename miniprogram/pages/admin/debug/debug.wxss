/* pages/admin/debug/debug.wxss */
.container {
  padding: 20rpx;
}

.header {
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.card {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.card .title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.button-group {
  display: flex;
  gap: 16rpx;
}

.nav-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  background-color: #f5f5f5;
  color: #333;
  border: none;
}

.nav-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.nav-btn:active {
  opacity: 0.8;
}

.info {
  font-size: 26rpx;
  color: #666;
  line-height: 40rpx;
}

.data-list {
  margin-top: 10rpx;
}

.data-item {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eee;
  font-size: 24rpx;
}

.data-item .date {
  color: #1890ff;
  font-weight: bold;
}

.log-card {
  height: 600rpx;
}

.log-container {
  height: 500rpx;
  background-color: #f5f5f5;
  border-radius: 5rpx;
  padding: 10rpx;
}

.log-item {
  font-size: 22rpx;
  color: #333;
  line-height: 30rpx;
  font-family: monospace;
}
