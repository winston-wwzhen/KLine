/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 城市选择器 */
.city-selector {
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.city-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.arrow {
  font-size: 24rpx;
  color: #999;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
  color: #999;
}

/* 错误提示 */
.error {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
  color: #f56c6c;
}

/* 图表容器 */
.chart-container {
  flex: 1;
  width: 100%;
  background-color: #fff;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

/* 图例说明 */
.legend {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  background-color: #fff;
  border-top: 1rpx solid #e0e0e0;
}

.legend-item {
  display: flex;
  align-items: center;
  margin: 0 20rpx;
}

.legend-item text {
  font-size: 24rpx;
  color: #666;
  margin-left: 10rpx;
}

.color-box {
  width: 30rpx;
  height: 30rpx;
  border-radius: 4rpx;
}

.color-box.up {
  background-color: #ef5350;
}

.color-box.down {
  background-color: #26a69a;
}
